<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aaa"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/rounded_card2"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="24dp"
            android:hint="Item"
            app:ms_hint="Item"
            android:paddingLeft="5dp"
            app:ms_padding_left="5dp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="280dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/spinner"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:hint="Quantity" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="74dp"
            android:layout_height="134dp"
            android:layout_marginLeft="320dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <ImageView
                android:id="@+id/edit_pending_orderView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_editicon_black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <ImageView
                android:id="@+id/delete_pending_order"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:src="@drawable/ic_deleteicon_black" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/textView19"
            android:hint="Price Per One Quantity"
            android:textColor="@color/DarkGray" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

