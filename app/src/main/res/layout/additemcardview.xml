<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aaa"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/rounded_card2"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_item"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Item" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="-80dp"
                android:hint="Item"
                android:paddingLeft="5dp"
                app:ms_hint="Item"
                app:ms_padding_left="5dp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/spinner"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:hint="Supplier" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner_supplier"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="-80dp"
                android:hint="Supplier"
                android:paddingLeft="5dp"
                app:ms_hint="Supplier"
                app:ms_padding_left="5dp" />


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="57dp"
                android:layout_height="180dp"
                android:layout_marginLeft="320dp"
                android:orientation="vertical">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="18dp" />

                <ImageView
                    android:id="@+id/delete_pending_order"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:src="@drawable/ic_deleteicon_black" />


            </LinearLayout>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@id/textView19"
                android:layout_marginTop="0dp"
                android:hint="Price(1 Unit)"
                android:textColor="@color/DarkGray" />

            <TextView
                android:id="@+id/spinner_price"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="-80dp"
                android:hint="Price"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:hint="Available Qty" />

            <TextView
                android:id="@+id/spinner_aqty"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="-80dp"
                android:hint="Available Qty"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/textView22"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:hint="Quantity" />

            <EditText
                android:id="@+id/spinner_qty"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="100dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="-80dp"
                android:hint="Quantity"
                android:paddingLeft="5dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>