<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Main__Bord">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:alignmentMode="alignMargins"
        android:background="@drawable/wallpaperpopuler3"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="45dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Row 1 -->
        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bac7"
            android:backgroundTint="@color/AliceBlue"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnInventory2"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bac4"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/supplierbtn1"
                    android:layout_width="96dp"
                    android:layout_height="207dp"
                    android:layout_marginTop="14dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_group_black_24dp" />

                <TextView
                    android:id="@+id/supplierbtn2"
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Suppliers"
                    android:textColor="@color/DarkSlateGray"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="10dp"
            android:layout_height="24dp"
            android:layout_rowWeight="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bac4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/itembtn1"
                    android:layout_width="108dp"
                    android:layout_height="161dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="19dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/delive1" />

                <TextView
                    android:id="@+id/itembtn2"
                    android:layout_width="121dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Items"
                    android:textColor="@color/DarkSlateGray"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itembtn1">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- Row 2 -->

        <!-- Column 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bac7"
            android:backgroundTint="@color/AliceBlue"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnInventory"
                android:layout_width="149dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bac4"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/oderbtn1"
                    android:layout_width="92dp"
                    android:layout_height="141dp"
                    android:layout_marginTop="14dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_archive_black_24dp" />

                <TextView
                    android:id="@+id/oderbtn2"
                    android:layout_width="139dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Orders"
                    android:textColor="@color/DarkSlateGray"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/oderbtn1">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Column 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="2"
            android:layout_columnWeight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnOrder"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bac4"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/oderstatus1"
                    android:layout_width="100dp"
                    android:layout_height="118dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="24dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/app_logo" />

                <TextView
                    android:id="@+id/oderstatu2"
                    android:layout_width="125dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Order Status"
                    android:textColor="@color/DarkSlateGray"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/oderstatus1">

                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- Row 3 -->

        <!-- Column 2 -->

    </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>