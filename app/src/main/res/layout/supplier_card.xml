<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/Supplier_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/colorMainBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/SupplierIdcard"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Supplier Id"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/supplier_id"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="23dp"
                    android:layout_toEndOf="@+id/SupplierIdcard"
                    android:fontFamily="@font/comfortaa_light"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/price_desc"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/SupplierIdcard"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Name"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/supplier_name"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/supplier_id"
                    android:layout_marginLeft="140dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/price_dc"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_desc"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Location"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/supplier_contact"
                    android:layout_width="239dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/supplier_name"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_desc"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Contact No"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/supplier_email"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/supplier_contact"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/price_desc"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Email"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/supplier_location"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/supplier_email"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/comfortaa_light"
                    android:textSize="18sp" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>